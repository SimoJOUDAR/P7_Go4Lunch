<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:orientation="horizontal"
    android:padding="6dp">

    <View
        android:id="@+id/name_shimmer"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_margin="3dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/address_shimmer"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/distance_shimmer"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/restaurant_placeholder_bg"/>

    <View
        android:id="@+id/address_shimmer"
        android:layout_width="240dp"
        android:layout_height="13dp"
        android:layout_margin="3dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/is_open_shimmer"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/name_shimmer"
        app:layout_constraintRight_toLeftOf="@id/joining_colleagues_sum_shimmer"
        app:layout_constraintTop_toBottomOf="@id/name_shimmer"
        android:background="@color/restaurant_placeholder_bg"/>

    <View
        android:id="@+id/is_open_shimmer"
        android:layout_width="90dp"
        android:layout_margin="3dp"
        android:layout_height="13dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/name_shimmer"
        app:layout_constraintTop_toBottomOf="@id/address_shimmer"
        android:background="@color/restaurant_placeholder_bg" />


    <View
        android:id="@+id/distance_shimmer"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintRight_toLeftOf="@id/photo_layout_shimmer"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/restaurant_placeholder_bg"/>

    <View
        android:id="@+id/joining_colleagues_sum_shimmer"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:drawableLeftCompat="@drawable/ic_person_24"
        app:layout_constraintBottom_toTopOf="@id/rating_stars_shimmer"
        app:layout_constraintRight_toRightOf="@id/distance_shimmer"
        app:layout_constraintTop_toBottomOf="@id/distance_shimmer"
        android:background="@color/restaurant_placeholder_bg"/>

    <View
        android:id="@+id/rating_stars_shimmer"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_margin="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/distance_shimmer"
        app:layout_constraintTop_toBottomOf="@id/joining_colleagues_sum_shimmer"
        android:background="@color/restaurant_placeholder_bg" />

    <View
        android:id="@+id/photo_layout_shimmer"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_margin="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/restaurant_placeholder_bg"/>


</androidx.constraintlayout.widget.ConstraintLayout>