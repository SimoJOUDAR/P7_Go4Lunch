<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/drawer_nav_header_layout"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <ImageView
        android:id="@+id/drawer_nav_bg_img"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/authentication_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/drawer_nav_user_avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="35dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/drawer_nav_user_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tool:src="@drawable/ic_user_circle_24" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/drawer_nav_credentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="35dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/drawer_nav_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                tool:text="Gordon Ramsay" />

            <TextView
                android:id="@+id/drawer_nav_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tool:text="gordon.ramsay@chef.com" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>