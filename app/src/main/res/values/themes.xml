<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="RestaurantDetailsMainButtons" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="drawableTint">?attr/colorPrimary</item>
    </style>

    <style name="ErrorLoginTryBtnTheme" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconTint">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="icon">@drawable/ic_retry</item>
        <item name="android:text">@string/retry_login_btn_txt</item>
    </style>

</resources>